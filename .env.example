# Database
DATABASE_URL=postgres://postgres:postgres@localhost:5432/stormleads

# JWT
JWT_SECRET=change-me-to-a-random-string
JWT_REFRESH_SECRET=change-me-to-another-random-string
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Server
PORT=3001
NODE_ENV=development

# Mapbox
VITE_MAPBOX_TOKEN=your-mapbox-public-token

# NOAA (no auth needed, but configurable)
MRMS_S3_BUCKET=noaa-mrms-pds
NWS_API_BASE=https://api.weather.gov
SPC_BASE=https://www.spc.noaa.gov

# Skip Trace (Tracerfy)
TRACERFY_API_KEY=
TRACERFY_API_BASE=https://api.tracerfy.com/v1

# Email Alerts (SMTP â€” works with SendGrid, Mailgun, Gmail, etc.)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM="StormLeads Alerts" <alerts@stormleads.io>
